{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "includeForks": true,
  "forkProcessing": "enabled",
  "onboarding": false,
  "requireConfig": "optional",
  "dependencyDashboard": false,
  "timezone": "Europe/Vienna",
  "prConcurrentLimit": 2,
  "prHourlyLimit": 1,
  "packageRules": [
    {
      "description": "Test rule - group linting packages",
      "matchPackageNames": ["/eslint/", "prettier", "oxlint"],
      "groupName": "linting"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
